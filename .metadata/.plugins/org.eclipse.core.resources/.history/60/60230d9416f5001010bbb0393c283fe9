package Collections;

public class Chocolate implements Comparable<Chocolate>{
	int cid;
	String name;
	int price;
	
	Chocolate(int cid, String name,int price){
		this.cid=cid;
		this.name=name;
		this.price=price;
	}
	
//	int GetId() {
//		return cid;
//	}
//	String GetName() {
//		return name;
//	}
//	int GetPrice() {
//		return price;
//	}
	@Override
    public String toString() {
        return "ID: " + cid + " | Name: " + name + " | Price: " + price;

	}
	
	// override the compareTo
	@Override
	public int compareTo(Chocolate c) {
//		return this.cid-c.cid; //accending Order
		return c.cid-this.cid; // decending order
	}
}
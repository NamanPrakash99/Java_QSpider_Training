//		System.out.println(a1.indexOf(10));   // first occurrence index
//		System.out.println(a1.lastIndexOf(10));  // last occurrence index
//		System.out.println(a1.get(1));
//		
//		System.out.println(a1.set(1,55));
//		System.out.println(a1);

	}

}

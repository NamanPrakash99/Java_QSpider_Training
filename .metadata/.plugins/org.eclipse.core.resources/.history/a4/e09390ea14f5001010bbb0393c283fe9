package Collections;
import java.util.ArrayList;
import java.util.Collections;
import java.util.Iterator;

public class ChocolateDriver {

	public static void main(String[] args) {
		ArrayList<Chocolate> c=new ArrayList<>();
		c.add(new Chocolate(101,"Dairy Milk",200));
		c.add(new Chocolate(105,"5-Star",50));
		c.add(new Chocolate(103,"Ferrero Rocher",1000));
		c.add(new Chocolate(108,"Munch",20));
		c.add(new Chocolate(108,"Gems",20));
		c.add(new Chocolate(102,"Kitkat",80));
		System.out.println("Before Sorting");
		for(Chocolate a:c) {
			System.out.println(a);
		}
		
		Collections.sort(c);
		System.out.println("After Sorting");
		for(Chocolate a:c) {
			System.out.println(a);
		}
		
//		ArrayList al=new ArrayList();

package exceptions;

public class T13Ticket {
	static int Availseats=10;
	static boolean PaymentsucceedBookingfailed=true;
	public static void main(String[] args) {
		try {
			TicketBook(8);
		}catch(T13SeatNotAvailableException n) {
			System.out.println(n.getMessage());
		}catch(T13PaymentSucceedBookingFailedException n) {
			System.out.println(n.getMessage());
		}
	}
	
	public static void TicketBook(int seat) throws T13SeatNotAvailableException,T13PaymentSucceedBookingFailedException  {
		if(seat>Availseats) {
			throw new T13SeatNotAvailableException("Seats Not Availble");
		}else if(!PaymentsucceedBookingfailed) {
			throw new T13PaymentSucceedBookingFailedException("Payment Succeeded but Booking Failed");
		}else {
			Availseats-=seat;
			System.out.println("Booking done.\nAvailabe Seats:"+seat);
		}
	}

}

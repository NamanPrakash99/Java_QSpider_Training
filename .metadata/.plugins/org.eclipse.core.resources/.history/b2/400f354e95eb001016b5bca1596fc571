package NonPrimitiveUpcasting;
import java.util.*;

public class Uber {
	public static void main(String[] args) {
		System.out.println("Enter 1 for Mini\n 2. For Sedan\n 3.Luxury");
		Scanner sc=new Scanner(System.in);
		int choose=sc.nextInt();
		Uber u;
		switch(choose) {
		case 1:{
			Mini m=new Mini();
			 u=m;
			 Mini m1=(Mini)u;
			 System.out.println("U choosed Mini");
			 System.out.println("The price for mini is : "+m1.price );
		}
		break;
		case 2:{
			Sedan s=new Sedan();
			 u=s;
			 Sedan s1=(Sedan)u;
			 System.out.println("U choosed Mini");
			 System.out.println("The price for mini is : "+s1.price );
		}
		break;
		case 3:{
			Luxury l=new Luxury();
			 u=l;
			 System.out.println("U choosed Mini");
			 System.out.println("The price for mini is : "+m1.price );
		}
		break;
		default:{
			System.out.println("Enter only 1,2 or 3");
		}
		}
	}
}

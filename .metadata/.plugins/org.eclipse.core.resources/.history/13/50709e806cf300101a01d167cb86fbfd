package Collections;

import java.util.ArrayList;
import java.util.Iterator;
import java.util.ListIterator;

public class Example5 {
	public static void main(String[] args) {
		ArrayList a1=new ArrayList();
		a1.add("haiii");
		a1.add(7654);
		a1.add("byee");
		a1.add(543);
		
//		Iterator i=a1.iterator();
		
//		System.out.println(i.next());
//		System.out.println(i.next());
//		System.out.println(i.next());
//		System.out.println(i.next());
//		System.out.println(i.next());   // if element is no there then exception NoSuchElementException
		
		//Traversing element in forward direction
		// iterator only traverse in forward direction
//		while(i.hasNext()) {
//			System.out.println(i.next());
//		}
		
		
		// LIST ITERATOR 
		
		ListIterator i=a1.listIterator();
		//traversing the element forward direction
		while(i.hasNext()) {
			System.out.println(i.next());
		}
		//traversing the element backward direction
		while(i.hasPrevious()) {
			System.out.println(i.previous());
		}
		// directly traversing form specific index
		ListIterator i=a1.listIterator(3);
		while(i.hasPrevious()) {
			System.out.println(i.previous());
		}
	}
}

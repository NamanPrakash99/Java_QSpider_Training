package FileHandling;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.ObjectInput;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;

//Serialization
public class StudentDriver {

	public static void main(String[] args) throws Exception {
		Student s=new Student(101,"Naman");
		
		// to convert java object to byte code 1st create a file
		FileOutputStream fs=new FileOutputStream("student.txt");  // we can pass file also but only direct
		// pass the file reference for ObjectOutputStream
		ObjectOutputStream os=new ObjectOutputStream(fs);
		// passing the student object reference for ObjectOutputStream
		// in order to get converted to byte code format
		os.writeObject(s);
		os.close();
		fs.close();
		
		FileInputStream fis=new FileInputStream("student.txt");
		ObjectInputStream ois=new ObjectInputStream(fis);
		Student ss=(Student)ois.readObject();
		System.out.println(ss.sid);
		System.out.println(ss.sname);
	}

}
